<Application
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="PortableApp.App">

  <Application.Resources>
    <ResourceDictionary>
      <!--Set Styles for StaticResource semiTransparentButton, which is used all over the app-->

      <Style x:Key="semiTransparentButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#66000000" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Margin" Value="20, 0, 20, 0" />
      </Style>
      <Style x:Key="outlineButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#00000000" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Margin" Value="20, 0, 20, 0" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="BorderColor" Value="White" />
      </Style>
    </ResourceDictionary>
  </Application.Resources>

</Application>